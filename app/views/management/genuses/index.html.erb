<p id="notice" class="notification is-info"><%= notice %></p>

<h1>Genuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Family</th>
      <th>Inserted at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genuses.each do |genuse| %>
      <tr>
        <td><%= genuse.name %></td>
        <td><%= genuse.slug %></td>
        <td><%= genuse.family %></td>
        <td><%= genuse.inserted_at %></td>
        <td><%= link_to 'Show', management_genuse_path(genuse) %></td>
        <td><%= link_to 'Edit', edit_management_genuse_path(genuse) %></td>
        <td><%= link_to 'Destroy', management_genuse_path(genuse), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

