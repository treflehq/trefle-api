<h3 class="title is-4">
  <% if species.main_species_id.nil? %>
  <span class="tag is-primary">Main species</span>
  <% end %>
  <%= link_to species.scientific_name, [:management, species] %>
  <span class="tag is-info is-light"><%= species.rank %></span>
  <span class="has-text-grey">#<%= species.id %></span>
</h3>

<% if species.synonyms.any? %>
<p>
  <%= species.synonyms.count %> Synonyms:
</p>
<div class="field is-grouped is-grouped-multiline">

  <% species.synonyms.each do |sp| %>
  <div class="control">
    <div class="tags has-addons">
      <span class="tag">Synonym</span>
      <span class="tag is-dark"><%= "#{sp.name} (#{sp.author})" %></span>
    </div>
  </div>
  <% end %>
</div>
<% else %>
<p>No synonyms</p>
<% end %>


<section class="image-list">
  <% if species.species_images.empty? %>
  <p>No images</p>
  <% end %>

  <% species.species_images.limit(10).each do |spi| %>
  <img src="<%= spi.image_url %>" alt="<%= spi.id %>" class="async-image medium" />
  <% end %>
  <% if species.species_images.count - 10 > 0 %>
  <b>And <%= species.species_images.count - 10 %> more
    <% end %>

</section>

