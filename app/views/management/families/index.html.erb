<p id="notice" class="notification is-info"><%= notice %></p>

<h1>Families</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Common name</th>
      <th>Division order</th>
      <th>Major group</th>
      <th>Inserted at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @families.each do |family| %>
      <tr>
        <td><%= family.name %></td>
        <td><%= family.slug %></td>
        <td><%= family.common_name %></td>
        <td><%= family.division_order %></td>
        <td><%= family.major_group %></td>
        <td><%= family.inserted_at %></td>
        <td><%= link_to 'Show', family %></td>
        <td><%= link_to 'Edit', edit_family_path(family) %></td>
        <td><%= link_to 'Destroy', family, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

