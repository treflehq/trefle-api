<p id="notice" class="notification is-info"><%= notice %></p>

<h1>Kingdoms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Inserted at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kingdoms.each do |kingdom| %>
      <tr>
        <td><%= kingdom.name %></td>
        <td><%= kingdom.slug %></td>
        <td><%= kingdom.inserted_at %></td>
        <td><%= link_to 'Show', kingdom %></td>
        <td><%= link_to 'Edit', edit_kingdom_path(kingdom) %></td>
        <td><%= link_to 'Destroy', kingdom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Kingdom', new_kingdom_path %>
