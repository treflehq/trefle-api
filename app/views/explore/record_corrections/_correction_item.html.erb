<div class="correction-item">
  <main>
    <% unless @species %>
    <header>
      <% if correction.record&.main_image_url %>
        <%= image_tag correction.record&.main_image_url, class: 'user-image thumb-image' %>
      <% end %>
      <%= link_to correction.record&.scientific_name, explore_species_path(correction.record_id) %>
    </header>
    <% end %>

    <%= link_to explore_record_correction_path(correction), class: '' do %>
      <h2 class="title is-5">
        <span class="<%= class_for_correction_status(correction.change_status) %>"><%= correction.change_status %></span>
        <span><%= title_for_correction(correction) %></span>
      </h2>
    <% end %> 
  </main>
  <footer>
    <div class="footer-item">
      <span>Submitted by </span>
      <%= image_tag correction.user.gravatar_url, class: 'user-image' %>
      <%= correction.user&.name || 'anonymous' %>
      <%= " on #{correction.created_at.to_formatted_s(:short)}" %>
    </div>
    <div class="footer-item">
      ᐧ From <%= correction.source_type %>
    </div>
    <div class="footer-item">
      ᐧ <%= correction.notes.blank? ? 'No notes' : 'With a note' %>
    </div>
  </footer>
</div>
