<section class="hero">
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class="column is-10 is-offset-1">
          <h1 class="main-title has-text-centered title is-3">
            Forgot your password?
          </h1>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="login-container-short">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "label" %>
    <div class="control">
      <%= f.email_field :email, autofocus: true, placeholder: 'Your email', autocomplete: "email", class: "input", required: true %>
    </div>
  </div>

  <div class="columns">
    <div class="column is-10 is-offset-2">
      <div class="field is-grouped is-grouped-right">
        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "button is-primary" %>
        </div>
      </div>
    </div>
  </div>

  <% end %>
  <%= render "devise/shared/links" %>

</div>